
[color]
    branch = auto
    diff = always
    status = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = cyan bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    summary = log --graph --decorate --pretty=oneline --abbrev-commit
    sum = log --graph --decorate --pretty=oneline --abbrev-commit
    history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --color --all

[core]
    pager = less -r
